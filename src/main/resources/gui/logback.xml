<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss} %thread %logger{10} - %-5level]: %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="me.danielschaefer" level="debug"/>

    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
